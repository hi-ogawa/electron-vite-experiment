{
  "name": "electron-vite-experiment",
  "version": "0.0.0",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:main": "pnpm build:main --watch",
    "dev:renderer": "vite --port 18181 --no-clearScreen",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "dev:electron": "APP_RENDERER_URL=http://localhost:18181/src/renderer/index.html && curl --retry 5 --retry-connrefused $APP_RENDERER_URL 1>/dev/null && nodemon --exec 'electron ./dist/main/index.js' -i '*'",
    "build": "run-s build:*",
    "build:main": "esbuild src/main/index.ts src/main/index-preload.ts --outdir=dist/main --bundle --platform=node --external:electron",
    "build:renderer": "vite build",
    "package": "electron-builder build",
    "tsc": "tsc -b",
    "lint": "run-s lint:*",
    "lint:eslint": "pnpm lint-check:eslint --fix",
    "lint:prettier": "prettier --write --cache .",
    "lint-check": "run-s lint-check:*",
    "lint-check:eslint": "eslint . --cache --cache-location node_modules/.cache/.eslintcache --ext .js,.jsx,.ts,.tsx",
    "lint-check:check": "prettier --check --check ."
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.4",
    "@tsconfig/strictest": "^1.0.2",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitejs/plugin-react": "^2.2.0",
    "electron": "^20.3.12",
    "electron-builder": "^23.6.0",
    "esbuild": "^0.15.18",
    "eslint": "^8.34.0",
    "eslint-plugin-import": "^2.27.5",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5",
    "undici": "^5.19.1",
    "vite": "^3.2.5",
    "vite-plugin-windicss": "^1.8.10"
  },
  "volta": {
    "node": "18.14.0"
  }
}
